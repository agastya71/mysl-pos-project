{
  "name": "pos-system",
  "version": "1.0.0",
  "description": "Point of Sale System for Non-Profit Organizations",
  "private": true,
  "workspaces": [
    "backend",
    "pos-client",
    "admin-dashboard"
  ],
  "scripts": {
    "dev": "docker-compose up",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:pos": "npm run dev --workspace=pos-client",
    "dev:admin": "npm run dev --workspace=admin-dashboard",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=backend",
    "build:pos": "npm run build --workspace=pos-client",
    "build:admin": "npm run build --workspace=admin-dashboard",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "clean": "npm run clean --workspaces && docker-compose down -v"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
