{
  "appId": "com.posystem.terminal",
  "productName": "POS Terminal",
  "copyright": "Copyright Â© 2026",
  "asar": true,
  "compression": "maximum",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "public/config.json",
      "to": "config.json"
    }
  ],
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "category": "public.app-category.business",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "build/entitlements.mac.plist",
    "entitlementsInherit": "build/entitlements.mac.plist",
    "icon": "build/icon.icns"
  },
  "dmg": {
    "title": "${productName} ${version}",
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ],
    "window": {
      "width": 540,
      "height": 380
    }
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "verifyUpdateCodeSignature": false,
    "icon": "build/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "${productName}",
    "license": "LICENSE.txt"
  },
  "portable": {
    "artifactName": "${productName}-Portable-${version}.${ext}"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ],
    "category": "Office",
    "synopsis": "Point of Sale Terminal Application",
    "description": "Desktop application for point of sale operations including sales, inventory, and customer management.",
    "icon": "build/icon.png"
  },
  "appImage": {
    "artifactName": "${productName}-${version}.${ext}"
  },
  "deb": {
    "artifactName": "${name}_${version}_${arch}.${ext}",
    "depends": [
      "gconf2",
      "gconf-service",
      "libnotify4",
      "libappindicator1",
      "libxtst6",
      "libnss3"
    ]
  },
  "publish": {
    "provider": "generic",
    "url": "https://updates.yourcompany.com/pos-terminal"
  }
}
