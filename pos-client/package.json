{
  "name": "pos-client",
  "version": "1.0.1",
  "description": "POS Client Desktop Application",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:webpack\" \"npm run dev:electron\"",
    "dev:webpack": "webpack serve --mode development",
    "dev:electron": "wait-on http://localhost:3001 && electron .",
    "build": "webpack --mode production && tsc -p tsconfig.electron.json",
    "build:mac": "npm run icons && npm run build && electron-builder --mac",
    "build:win": "npm run icons && npm run build && electron-builder --win",
    "build:linux": "npm run icons && npm run build && electron-builder --linux",
    "build:all": "npm run icons && npm run build && electron-builder -mwl",
    "pack": "npm run build && electron-builder --dir",
    "electron:dev": "concurrently \"npm run dev:webpack\" \"wait-on http://localhost:3001 && electron .\"",
    "icons": "node scripts/generate-icons.js",
    "clean": "rm -rf dist release",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.0.0",
    "axios": "^1.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.0.0",
    "react-router-dom": "^6.20.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^8.3.4",
    "ajv": "^8.17.1",
    "ajv-keywords": "^5.1.0",
    "buffer": "^6.0.3",
    "concurrently": "^8.2.2",
    "electron": "28.3.3",
    "electron-builder": "^26.7.0",
    "electron-updater": "^6.7.3",
    "html-webpack-plugin": "^5.6.0",
    "icon-gen": "^5.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "util": "^0.12.5",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.11.1"
  }
}
